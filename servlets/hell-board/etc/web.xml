<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
         version="2.4">

    <!-- filter -->
    <filter>
        <filter-name>default</filter-name>
        <filter-class>com.hellBoard.filter.DefaultFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>default</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <!-- filter -->

    <!-- servlet -->
    <servlet>
        <servlet-name>HellBoardApplication</servlet-name>
        <servlet-class>com.hellBoard.HellBoardApplication</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>HellBoardApplication</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>HellBoardJoin</servlet-name>
        <servlet-class>com.hellBoard.web.HellBoardJoin</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>HellBoardJoin</servlet-name>
        <url-pattern>/join</url-pattern>
    </servlet-mapping>
    <!-- servlet -->
</web-app>